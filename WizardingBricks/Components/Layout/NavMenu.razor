@inject NavigationManager Navigation

<MudNavMenu>
    <MudNavGroup Title="Sets" Expanded>
        <MudNavLink Href="sets" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.List">Set List</MudNavLink>
        <MudNavLink Href="edit-set" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Add">Add Set</MudNavLink>
    </MudNavGroup>
    <MudNavGroup Title="Categories" Expanded>
        <MudNavLink Href="categories" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.List">Category List</MudNavLink>
        <MudNavLink Href="edit-category" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Add">Add Category</MudNavLink>
    </MudNavGroup>
    <MudNavGroup Title="Books / Movies" Expanded>
        <MudNavLink OnClick="() => Navigate(1)" Match="NavLinkMatch.All">Philosopher's Stone</MudNavLink>
        <MudNavLink OnClick="() => Navigate(2)" Match="NavLinkMatch.Prefix">Chamber of Secrets</MudNavLink>
        <MudNavLink OnClick="() => Navigate(3)" Match="NavLinkMatch.Prefix">Prisoner of Azkaban</MudNavLink>
        <MudNavLink OnClick="() => Navigate(4)" Match="NavLinkMatch.Prefix">Goblet of Fire</MudNavLink>
        <MudNavLink OnClick="() => Navigate(5)" Match="NavLinkMatch.Prefix">Order of the Phoenix</MudNavLink>
        <MudNavLink OnClick="() => Navigate(6)" Match="NavLinkMatch.Prefix">Half-Blood Prince</MudNavLink>
        <MudNavLink OnClick="() => Navigate(7)" Match="NavLinkMatch.Prefix">Deathly Hallows</MudNavLink>

    </MudNavGroup>
</MudNavMenu>

@code{

    public void Navigate(int categoryId)
    {
        Navigation.NavigateTo("/categories/" + categoryId, forceLoad: true);
    }

}

