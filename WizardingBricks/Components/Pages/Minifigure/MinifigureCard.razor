@inject NavigationManager Navigation
<MudCard Class="pa-3" Outlined Style="@($"width:{Width}px;")" Square>
	<MudImage Class="align-self-center" Src="@Minifigure.Preview_Image_URL" Width="GetImageWidth()" />
	<MudLink Color="Color.Inherit" Class="mx-auto my-2" @onclick="NavigateToDetailsPage">@Minifigure.Name</MudLink>
</MudCard>

@code {

	[Parameter]
	public Minifigure Minifigure { get; set; } = null!;

	[Parameter]
	public int Width { get; set; } = 200;

	public int GetImageWidth() => Width - 50;

	public void NavigateToDetailsPage() => Navigation.NavigateTo("/minifigures/" + Minifigure!.Id);
}
