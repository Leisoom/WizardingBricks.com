@inject MinifigureService MinifigureService

<MudDialog>
    <TitleContent>
        Minifigure Browser
    </TitleContent>
    <DialogContent>
        <MudGrid>
            @foreach (var mf in MinifigureList)
            {
            <MudItem xs="3" Class="mx-3">
                <MudButton OnClick="() => AddToSelection(mf)" Style="@(isSelected(mf) ? "background: green;" : "background: red;")">
                    <MudPaper>
                        <MinifigureCard Minifigure="mf" Width="250" />
                    </MudPaper>
                </MudButton>
            </MudItem>   
            }
        </MudGrid>
        <MudText Class="my-2 text-bold"> @SelectedFigures.Count Minifigures(s) Selected</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">OK</MudButton>
    </DialogActions>
</MudDialog>
@code {

    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;
    [Parameter]
    public ICollection<Minifigure> PreselectedMinifigures { get; set; } = [];

    public List<Minifigure> MinifigureList { get; set; } = [];
    public HashSet<Minifigure> SelectedFigures { get; set; } = [];
    private int _selectedCount { get; set; }
    protected async override Task OnInitializedAsync()
    {
        MinifigureList = await MinifigureService.GetMinifiguresAsync();

        if(PreselectedMinifigures.Count != 0)
        {
            PreselectedMinifigures.ToList().ForEach(x => SelectedFigures.Add(x));
        }
    }

    public void AddToSelection(Minifigure selected)
    {
        var result = SelectedFigures.Add(selected);

        if (!result)
        {
            SelectedFigures.Remove(selected);
        }
    }

    public bool isSelected(Minifigure mf) => SelectedFigures.Contains(mf);

    private void Submit() => MudDialog.Close(DialogResult.Ok(SelectedFigures));
    private void Cancel() => MudDialog.Cancel();
}