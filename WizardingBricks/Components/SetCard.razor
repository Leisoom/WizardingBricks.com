@inject NavigationManager Navigation

<MudCard Class=" pa-3">
	<MudCardHeader Class="mb-n6">
		<CardHeaderContent>
			<MudLink Color="Color.Inherit" OnClick="NavigateToDetailPage" Typo="Typo.h6">@Set.Name - @Set.Year</MudLink>
		</CardHeaderContent>
	</MudCardHeader>
	<MudCardContent>
		<MudImage Src="@Set.Preview_Image_URL"  />
	</MudCardContent>
	<MudCardActions>
	</MudCardActions>
</MudCard>

@code {
	[Parameter]
	public Set Set { get; set; } = null!;

	public void NavigateToDetailPage() => Navigation.NavigateTo("/sets/" + Set.Id);

}
