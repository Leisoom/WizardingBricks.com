@inject NavigationManager Navigation

<MudCard Class="pa-3" Outlined Style="width:350px;" Square>
	<MudCardContent Class="align-self-center">
		<MudImage ObjectFit="ObjectFit.Contain" Src="@Set.Preview_Image_URL" Width="300" />
		<MudLink Color="Color.Inherit" OnClick="NavigateToDetailPage" Typo="Typo.body1">@Set.Name</MudLink>
	</MudCardContent>
</MudCard>

@code {
	[Parameter]
	public Set Set { get; set; } = null!;

	public void NavigateToDetailPage() => Navigation.NavigateTo("/sets/" + Set.Id);

}
