@inject NavigationManager Navigation
<MudCard>
	<MudImage Class="align-self-center" Src="@Minifigure.Preview_Image_URL" Width="200" />
	<MudText Class="cursor-pointer mx-auto my-2" @onclick="NavigateToDetailsPage">@Minifigure.Name</MudText>
</MudCard>

@code {

	[Parameter]
	public Minifigure Minifigure { get; set; }

	public void NavigateToDetailsPage() => Navigation.NavigateTo("/minifigures/" + Minifigure!.Id);
}
