@inject NavigationManager Navigation
<MudCard>
	<MudCardHeader>
		<CardHeaderContent>
			<MudLink OnClick="NavigateToDetailsPage">@Minifigure.Name</MudLink>
		</CardHeaderContent>
	</MudCardHeader>

	<MudImage Src="@Minifigure.Preview_Image_URL" Width="200" />
</MudCard>

@code {

	[Parameter]
	public Minifigure Minifigure { get; set; }

	public void NavigateToDetailsPage() => Navigation.NavigateTo("/minifigures/" + Minifigure!.Id);
}
